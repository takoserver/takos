###########################################################################
# Takos Host – .env.example
# このファイルを .env にコピーし、各値を環境に合わせて設定してください
###########################################################################

############################
# 基本設定
############################
MONGO_URI=mongodb://localhost:27017/takos-host
# サーバーの待ち受けアドレス (省略時は 0.0.0.0)
SERVER_HOST=

# サーバーのポート番号 (省略時は 80)
SERVER_PORT=80

# HTTPS を有効にする場合は証明書と鍵の内容を直接指定
# 例: SERVER_CERT="-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----\\n"
SERVER_CERT=
# 例: SERVER_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
SERVER_KEY=

# マルチテナント用のデフォルトルートドメイン
# Cloudflare Workers 直提供版では、ルートドメインは wrangler.toml の [vars]
# に ACTIVITYPUB_DOMAIN を設定してください（UI の ".<rootDomain>" 表示に使用）。
# ここは Deno サーバー運用時の既定値です。
ACTIVITYPUB_DOMAIN=takos.jp

# フリープランで作成できるインスタンス数
FREE_PLAN_LIMIT=1

# 使用禁止サブドメインをカンマ区切りで列挙
RESERVED_SUBDOMAINS=www,admin

############################
# Google 認証
############################
# Google Cloud Console で OAuth 2.0 クライアントを作成し、
# 下記を設定してください。
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# redirect_uri は "/auth/google/callback" 固定です（リクエストのオリジンから自動生成するため未設定でOK）

############################
# 利用規約
############################
# Markdown またはテキストファイルのパスを指定
# 例: TERMS_FILE=./terms.md
TERMS_FILE=

############################
# メール送信 (SMTP) 設定
############################
# すべて空欄のままにすると確認メールを送信しません
# Gmail を使う場合は 2 段階認証 + 16 桁のアプリパスワードを発行してください

# SMTP サーバー
SMTP_HOST=smtp.gmail.com
# ポート番号 – SSL(465) か STARTTLS(587) のどちらかに合わせて変更
SMTP_PORT=465

# 認証情報
SMTP_USER=your_address@gmail.com
SMTP_PASS=your_app_password

# SSL / TLS 選択 (大文字で指定)  
#  - 465 を使う場合 → SSL  
#  - 587 を使う場合 → TLS
SMTP_SSL=587

# 送信元アドレス (省略時は SMTP_USER が使用される)
MAIL_FROM=

############################
# FCM 設定
############################
# Firebase Cloud Messaging を利用する場合に設定します。
# これらは自動的に各テナントへ渡されます。
# FCM 用サービスアカウント
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_VAPID_KEY=

############################
# FASP (takos_host)
############################
# takos_host を FASP サーバーとして公開しない場合は 1/true/yes を指定
# 指定しない/0/false などの場合は provider_info を公開します（ルートドメインのみ）
FASP_SERVER_DISABLED=

# 各テナント作成時に既定で登録する FASP サーバーのベースURL
# 例: https://fasp.example.com  または fasp.example.com（https が自動付与）
# 未設定なら自動登録は行いません
FASP_DEFAULT_BASE_URL=
