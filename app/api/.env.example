MONGO_URI=mongodb://localhost:27017/takos-hono
DB_MODE=local
# サーバーの待ち受けアドレス (省略時は 0.0.0.0)
SERVER_HOST=
# サーバーのポート番号 (省略時は 80)
SERVER_PORT=80
# HTTPS を有効にする場合は証明書と鍵の内容を直接指定
# 例: SERVER_CERT="-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----\\n"
SERVER_CERT=
# 例: SERVER_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
SERVER_KEY=
hashedPassword=$2a$10$KpzI70.g4V42p7KczcR.jeFayt7mL1rCFgX37IqY1V9PDzHSglPWW
salt=
ACTIVITYPUB_DOMAIN=dev.takos.jp
# OAuth 認証を提供する takos host のドメインを指定します
# 例: OAUTH_HOST=takos.jp または https://takos.jp
# 未設定の場合は OAuth 認証を利用できません
OAUTH_HOST=
# OAuth クライアントIDとシークレットを設定します
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# オブジェクトストレージの設定
# どのプロバイダを使用するか選択します: "local", "gridfs"
OBJECT_STORAGE_PROVIDER=local
# local を使用する場合の保存先ディレクトリ
LOCAL_STORAGE_DIR=uploads
# GridFS を使用する場合の設定
GRIDFS_BUCKET=uploads
# R2 を使用する場合の設定
R2_BUCKET=
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
# アップロードファイルの制限と許可/拒否設定（すべて環境変数で制御）
# 最大サイズ（例: 10MB, 512KB, 10485760。未設定なら無制限）
FILE_MAX_SIZE=10MB
# 許可する MIME タイプ（カンマ区切り、未設定なら許可リストなし＝全 MIME 許可）
# 例: image/jpeg,image/png,application/pdf,text/plain
FILE_ALLOWED_MIME_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp,image/svg+xml,video/mp4,video/webm,video/ogg,audio/mpeg,audio/ogg,audio/wav,audio/webm,application/pdf,text/plain,text/markdown,application/json
# 拒否する MIME タイプ（カンマ区切り、未設定なら制限なし）
# 例: application/x-msdownload,application/x-dosexec
FILE_BLOCKED_MIME_TYPES=
# 拒否する拡張子（カンマ区切り、未設定なら制限なし）
FILE_BLOCKED_EXTENSIONS=.exe,.bat,.cmd,.com,.msi,.scr,.vbs,.js,.jar,.app,.deb,.rpm,.sh,.bash,.ps1,.psm1,.psd1
# FCM 用サービスアカウント

FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_API_KEY=your_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456
FIREBASE_VAPID_KEY=your_public_vapid_key


# Google AdSense 設定
ADSENSE_CLIENT=
ADSENSE_SLOT=
ADSENSE_ACCOUNT=

# takos host用のtakos host本体のドメイン
ROOT_DOMAIN=takos.jp
